{% extends "PriveeBundle:Privee:index.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block header %}
        <header id="header" class="alt">
        <div id="div_logo">
            <h1 id="logo">
            <a href="{{path("Privee_accueil")}}">
            <img src="{{ asset('bundles/public/assets/css/images/logo.jpg')}}" alt="logo" height="60" width="60"/></a></h1>
        </div>            
            <!-- Menu -->
            {% block menu %}
                <nav>
                    <a href="{{path("Privee_accueil")}}">Accueil</a>
                    <a href="{{path("fos_user_profile_show")}}">{{user.nom}}<img src="{{ asset('bundles/public/assets/css/images/icon_user.png')}}" id="icon_user" alt="icon_user" height="15" width="20"/></a>
                    <a href="{{path("Privee_calendrier")}}">Calendrier</a>
                    <a href="{{path("fos_user_security_logout")}}"  id="deconnexionBouton">Deconnexion</a>                   
                </nav>  
            {% endblock %}        
        </header>        
{% endblock %}


{% block contenu %}
    
    <div id="form_parametre" class="block_form">
        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
            {{ form_widget(form) }}
            <div>
                <input id="update_Param" type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </form>
    </div>
    											
{% endblock contenu %}


