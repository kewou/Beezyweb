{% extends "PriveeBundle:Privee:index.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block header %}
        <header id="header" class="alt">
            <h1 id="logo"><a href="{{path("Moniteur_accueil")}}">Accueil</a></h1>            
            <!-- Menu -->
            {% block menu %}
                <nav id="nav">
                    <ul>
                        <li><a href="{{path("fos_moniteur_profile_show")}}">{{user.nom}} {{user.prenom}}</a></li>
                        <li><a href="{{path("Moniteur_calendrier")}}">Calendrier</a></li>
                        <li><a href="{{path("fos_moniteur_profile_edit")}}">Paramètres</a></li>
                        <li><a href="{{path("fos_user_security_logout")}}" class="button special">Deconnexion</a></li>
                    </ul>
                </nav>  
            {% endblock %}        
        </header>        
{% endblock %}

{% block contenu %}
    <h2 class="major">Paramètres généraux du compte</h2>                                                
    <form action="{{ path('fos_moniteur_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
        {{ form_widget(form) }}
        <div>
            <input type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </form>
    											
{% endblock contenu %}


